void _SelmaInit( Critter& cr, bool firstTime )
{
    cr.StatBase[ ST_VAR0 ] = 8;
    cr.SkillBase[ SK_SMALL_GUNS ] = 200;
    cr.StatBase[ ST_TEAM_ID ] = TEAM_QuestNpc;
    _SetupCaravanLeader( 8, cr );
}

