#include "_macros.fos"


bool WantedSignSet( Item& wantedSign, string& name, uint cost ) // Export
{
    if( wantedSign.Info != 2 )
    {
        wantedSign.Info = 2;
        wantedSign.Update();
    }
    wantedSign.SetLexems( "$name" + name + "$cost" + cost );
    return true;
}
