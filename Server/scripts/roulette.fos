        str += "$minbet" + MinBet[ croupier.StatBase[ CROUPIER_NUM ] ];
        str += "$betone" + Bet1[ croupier.StatBase[ CROUPIER_NUM ] ];
        str += "$bettwo" + Bet2[ croupier.StatBase[ CROUPIER_NUM ] ];
        str += "$betthree" + Bet3[ croupier.StatBase[ CROUPIER_NUM ] ];
